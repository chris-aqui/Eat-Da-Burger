<div class='container'>
  <div class='row'>
    <div class='centerText'>
      <h1>Eat Da Burger!</h1>
    </div>
    <div class='centerText'>
      <div class='row'>
        {{#each burger_data}} {{#unless this.devoured}}
        <div class='centerText'>
          <pre>{{this.id}}. {{this.burger_name}} </pre>
        </div>
      </div>
      <div class='centerText'>
        <form action="/burgers/update?_method=PUT" method="post" class='button-size'>
          <input type="hidden" name="burger_id" type="text" value="{{this.id}}">
          <br>
          <button type="submit">Devour</button>
        </form>
      </div>
      {{/unless}} {{/each}}
    </div>

    <div class='centerText'>
      {{#each burger_data}} {{#if this.devoured}}
      <input type="text" class='form-control' placeholder="{{this.id}}. {{this.burger_name}}" readonly> {{/if}} {{/each}}
      <br>
    </div>
  </div>
</div>
<div class='container'>
  <div class="row">
    <div class="enter_section">
      <form action="/burgers/create" method="post">
        <input type="text" name="burger_name" id="enter_text" class='form-control' value=''>
        <button type="submit" id="enter-button">Submit</button>
      </form>
    </div>
  </div>
</div>